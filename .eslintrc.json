{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "standard"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "space-before-function-paren": [
      2,
      { "anonymous": "always", "named": "never" }
    ],
    "multiline-ternary": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
